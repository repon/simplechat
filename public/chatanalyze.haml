!!! 5
%html{"ng-app"=>""}
  %head
    %title SimpleChatAnalyzer
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html", :charset=>"utf-8"}
    %meta{:name=>"viewport", :content=>"width=device-width, user-scalable=0;"}
    %script{:type=>"text/javascript",:src=>"jquery-2.0.3.min.js"}
    %script{:type=>"text/javascript",:src=>"bootstrap/js/bootstrap.js"}
    %script{:type=>"text/javascript",:src=>"angular.min.js"}
    %link{:rel=>"stylesheet", :href=>"bootstrap/css/bootstrap.min.css"}
    %link{:rel=>"stylesheet", :href=>"bootstrap/css/bootstrap-responsive.css"}
    %link{:rel=>"shortcut icon", :type => "vnd.microsoft.icon", :href => "favicon.ico"}
  %body
    %h1 SimpleChatAnalyzer
    %div{:class=>"container-fluid"}
      %div{"ng-controller"=>"Ctrl"}
        %div{"ng-init"=>"init();getdata();"}
          メンバー:
          %input{:type=>"text","ng-model"=>"memberquery"}
          発言:
          %input{:type=>"text","ng-model"=>"dataquery"}
          %table{:class=>"table"}
            %tr
              %th
              %th{"ng-repeat"=>"key in keys"}
                {{key}}
            %tr{"ng-repeat"=>"log in logs|filter:{member:memberquery,data:dataquery}|orderBy:orderProp:reverse"}
              %td {{$index+1}}
              %td{"ng-repeat"=>"key in keys"}
                {{log[key]}}

    %script{:type=>"text/javascript",:src=>"chatanalyze.js"}